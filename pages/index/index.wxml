<!--pages/index/index.wxml-->
<!-- 1. 小程序的数据绑定 -->
<view>hello world {{ name }}</view>
<view>年龄： {{ age }}</view>

<!-- 2. 列表展示: wx:for -->
<view wx:for="{{ students }}" wx:key="index">姓名：{{ item.name }}，年龄：{{ item.age }}</view>

<!-- 3. 事件监听改变data -->
<view>当前计数：{{ counter }}</view>
<button size="mini" bindtap="handleBtnClick">+</button>
<button size="mini" bindtap="handleSubtraction">-</button>